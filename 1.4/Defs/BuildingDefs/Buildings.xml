<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="BuildingBase">
        <thingClass>Building_Bed</thingClass>
        <defName>ATE_chargingpad</defName>
        <label>humanoid charging pad</label>
        <description>Designate a spot to charge a humanoid.</description>
        <size>(1,1)</size>
        <passability>Standable</passability>
        <altitudeLayer>FloorEmplacement</altitudeLayer>
        <designationCategory>Misc</designationCategory>
        <graphicData>
            <texPath>Things/Building/Misc/AnimalBed/AnimalSleepSpot</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>0.80</uiIconScale>
        <useHitPoints>True</useHitPoints>
        <statBases>
            <Comfort>0.4</Comfort>
            <SurgerySuccessChanceFactor>0.7</SurgerySuccessChanceFactor>
            <WorkToBuild>1000</WorkToBuild>
            <MaxHitPoints>180</MaxHitPoints>
            <Flammability>1.0</Flammability>
        </statBases>
        <building>
            <bed_showSleeperBody>True</bed_showSleeperBody>
            <sowTag>SupportPlantsOnly</sowTag>
            <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
            <ai_chillDestination>false</ai_chillDestination>
            <wakeDormantPawnsOnConstruction>false</wakeDormantPawnsOnConstruction>
            <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
            <buildingTags>
                <li>Bed</li>
            </buildingTags>
        </building>
        <comps>
            <li Class="CompProperties_AssignableToPawn">
                <drawAssignmentOverlay>false</drawAssignmentOverlay>
                <compClass>CompAssignableToPawn_Bed</compClass>
            </li>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>300</basePowerConsumption>
                <idlePowerDraw>15</idlePowerDraw>
                <shortCircuitInRain>true</shortCircuitInRain>
            </li>
            <li Class="CompProperties_Flickable" />
            <li Class="CompProperties_HeatPusher">
                <compClass>CompHeatPusherPowered</compClass>
                <heatPerSecond>5</heatPerSecond>
            </li>
            <li Class="CompProperties_Breakdownable" />
        </comps>
        <drawGUIOverlay>True</drawGUIOverlay>
        <uiOrder>3000</uiOrder>
        <pathCost>50</pathCost>
        <researchPrerequisites>
            <!-- <li>Androids+++</li> -->
          </researchPrerequisites>


    </ThingDef>


</Defs>
